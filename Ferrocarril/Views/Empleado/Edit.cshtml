@model Ferrocarril.Models.Empleado

@{
    ViewData["Title"] = "Edit";
}
<html class="body" lang="en">
<!-- divinectorweb.com -->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive User Profile Card using HTML and CSS</title>

    <link rel="stylesheet" href="~/css/site.css">
</head>
<body class="body">
    <h1>Actualizar los datos</h1>


    <hr />
    <div class="wrapper ">
        <div class="user-card">
            <div class="user-card-img">
                <img src="~/Imagenes/2.jpg" alt="">
            </div>
            <div class="user-card-info " >
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Legajo" />
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaIngreso" class="control-label"></label>
                        <input asp-for="FechaIngreso" class="form-control" />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BaseOperativaId" class="control-label"></label>
                        <select asp-for="BaseOperativaId" class="form-control" asp-items="ViewBag.ListaBase"></select>
                        <span asp-validation-for="BaseOperativaId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ServicioId" class="control-label"></label>
                        <select asp-for="ServicioId" class="form-control" asp-items="ViewBag.ListaServicio"></select>
                        <span asp-validation-for="ServicioId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ServicioId" class="control-label"></label>
                        <select asp-for="ServicioId" class="form-control" asp-items="ViewBag.ListaCategoria"></select>
                        <span asp-validation-for="ServicioId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
                <br />
                <p><span>Informacion:</span> En esta vista podrá actualizar cualquiera de los datos mostrados en los campos.</p>



            </div>
        </div>
    </div>
    <figure class="figure position-absolute m-0 opacity-06 z-index-100" style="bottom:0; right: 10px">
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="444px" height="626px">
            <defs>
                <linearGradient id="PSgrad_1" x1="0%" x2="81.915%" y1="57.358%" y2="0%">
                    <stop offset="0%" stop-color="rgb(255,255,255)" stop-opacity="1"></stop>
                    <stop offset="100%" stop-color="rgb(0,54,207)" stop-opacity="0"></stop>
                </linearGradient>

            </defs>
            <path fill-rule="evenodd" opacity="0.302" fill="rgb(72, 155, 248)" d="M816.210,-41.714 L968.999,111.158 L-197.210,1277.998 L-349.998,1125.127 L816.210,-41.714 Z"></path>
            <path fill="url(#PSgrad_1)" d="M816.210,-41.714 L968.999,111.158 L-197.210,1277.998 L-349.998,1125.127 L816.210,-41.714 Z"></path>
        </svg>
    </figure>

</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

